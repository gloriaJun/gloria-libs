{
  "name": "glibs",
  "version": "1.0.0",
  "repository": "https://github.com/gloriaJun/gloria-libs",
  "private": true,
  "workspaces": [
    "packages/react/*",
    "packages/utility/*"
  ],
  "scripts": {
    "clean": "lerna clean -y",
    "postinstall": "lerna bootstrap",
    "prebootstrap": "lerna clean -y",
