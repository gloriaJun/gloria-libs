{
  "name": "glibs",
  "version": "1.0.0",
  "repository": "https://github.com/gloriaJun/gloria-libs",
  "private": true,
  "workspaces": [
    "packages/react/*",
    "packages/utility",
    "packages/logger"
  ],
  "keywords": [
    "typescript",
    "storybook",
    "ui-component",
    "utility",
    "logger"
  ],
  "scripts": {
    "clean": "lerna clean -y",
    "postinstall": "lerna bootstrap",
    "bootstrap": "lerna bootstrap",
    "start": "lerna run start",
    "build": "lerna run build",
    "build:doc": "lerna run build:doc",
    "test": "lerna run test --stream",
    "test:util": "lerna --scope=@glibs/utility exec -- yarn run test",
    "test:logger": "lerna --scope=@glibs/logger exec -- yarn run test",
    "storybook:react": "lerna --scope=@glibs/react-storybook exec -- yarn run storybook",
    "prelint": "tsc --noEmit",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "$npm_execpath run lint -- --fix"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@commitlint/config-lerna-scopes": "^11.0.0",
    "@storybook/addon-actions": "^6.1.14",
    "@storybook/addon-essentials": "^6.1.14",
    "@storybook/addon-links": "^6.1.14",
    "@storybook/node-logger": "^6.1.14",
    "@storybook/react": "^6.1.14",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.14.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "eslint": "^7.18.0",
    "eslint-config-gloria-base": "^1.0.2",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "react-docgen-typescript": "^1.20.5",
    "ts-jest": "^26.4.4",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typedoc": "^0.20.16",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">=15.0.0"
  }
}
