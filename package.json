{
  "name": "glibs",
  "version": "1.0.0",
  "repository": "https://github.com/gloriaJun/gloria-libs",
  "private": true,
  "workspaces": [
    "packages/react/*",
    "packages/utility"
  ],
  "keywords": [
    "typescript",
    "storybook",
    "ui-component",
    "utility"
  ],
  "scripts": {
    "clean": "lerna clean -y",
    "postinstall": "lerna bootstrap",
    "bootstrap": "lerna bootstrap",
    "start": "lerna run start",
    "build": "lerna run build",
    "build:doc": "lerna run build:doc",
    "test": "lerna run test --stream",
    "test:util": "lerna --scope=@glibs/utility exec -- yarn run test",
    "storybook:react": "lerna run storybook --scope=@glibs/react-storybook",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --fix --ext .js,.jsx,.ts,.tsx"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@commitlint/config-lerna-scopes": "^11.0.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.21",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.14.0",
    "babel-jest": "^26.6.1",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "eslint": "^7.18.0",
    "eslint-config-gloria-base": "^1.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "jest": "^26.6.1",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.2",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.4",
    "typedoc": "^0.20.16",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=15.0.0"
  }
}
